<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/eco2_arrow_canvas"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="TODO"
            android:rotation="-150"
            android:tint="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064"
            app:srcCompat="@drawable/ic_arrow_fat_center" />

        <ImageView
            android:id="@+id/eco2_gauge_back"
            android:layout_width="159dp"
            android:layout_height="159dp"
            app:srcCompat="@drawable/ic_gauge_around"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.134"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/gauge_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_label"
            app:layout_constraintBottom_toBottomOf="@+id/eco2_gauge_back"
            app:layout_constraintEnd_toEndOf="@+id/eco2_gauge_back"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/eco2_gauge_back"
            app:layout_constraintTop_toTopOf="@+id/eco2_gauge_back"
            app:layout_constraintVertical_bias="0.914" />

        <TextView
            android:id="@+id/gauge_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eco_gauge_label"
            app:layout_constraintBottom_toBottomOf="@+id/eco2_gauge_back"
            app:layout_constraintEnd_toEndOf="@+id/eco2_gauge_back"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/eco2_gauge_back"
            app:layout_constraintTop_toTopOf="@+id/eco2_gauge_back"
            app:layout_constraintVertical_bias="0.121" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>